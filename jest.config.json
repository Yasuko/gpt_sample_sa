{
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/__tests__/*.+(ts|tsx|js)",
      "**/__test__/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "\\node_modules\\",
      "\\_lib\\"
    ],
    "testEnvironment": "jest-environment-jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"]
}
